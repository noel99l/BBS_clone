<div class="container">
    <div class="row">

    <h1>Boards</h1>

    <table>
      <thead>
        <tr>
          <th>User</th>
          <th>Title</th>
          <th>Body</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @boards.each do |board| %>
          <tr>
            <td><%= board.user_id %></td>
            <td><%= board.title %></td>
            <td><%= board.body %></td>
            <td><%= link_to 'Show', board %></td>
            <td><%= link_to 'Destroy', board, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Board', new_board_path, class:"btn btn-default" %>

    </div>
</div>